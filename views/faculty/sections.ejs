<h2 class="mb-4">My Assigned Classes</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Section</th>
      <th>Schedule</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% classes.forEach(cls => { %>
      <tr>
        <td><%= cls.subject %></td>
        <td><%= cls.section %></td>
        <td><%= cls.schedule %></td>
        <td><a href="/faculty/section/<%= cls._id %>" class="btn btn-sm btn-outline-primary">View</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>