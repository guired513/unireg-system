<div class="text-center mt-5">
  <h1>Welcome to <strong>UniReg</strong></h1>
  <p class="lead">A central hub for university registration, scheduling, grading, and more.</p>
  <% if (!user) { %>
    <a href="/login" class="btn btn-primary me-2">Login</a>
    <a href="/register" class="btn btn-outline-secondary">Register</a>
  <% } else { %>
    <p class="text-success">You're logged in as <%= user.role %>.</p>
  <% } %>
</div>
