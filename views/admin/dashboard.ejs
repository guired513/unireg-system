<div class="container-fluid">
  <h1 class="mb-4">Superadmin Dashboard</h1>
  <div class="row">
    <div class="col-md-3">
      <div class="card text-bg-primary mb-3">
        <div class="card-body">
          <h5 class="card-title">Total Users</h5>
          <p class="card-text fs-4"><%= totalUsers %></p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-bg-success mb-3">
        <div class="card-body">
          <h5 class="card-title">Active Students</h5>
          <p class="card-text fs-4"><%= totalStudents %></p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-bg-warning mb-3">
        <div class="card-body">
          <h5 class="card-title">Faculty Members</h5>
          <p class="card-text fs-4"><%= totalFaculty %></p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-bg-info mb-3">
        <div class="card-body">
          <h5 class="card-title">Registrars</h5>
          <p class="card-text fs-4"><%= totalRegistrars %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <div class="card p-4 shadow-sm">
        <h5 class="mb-3">User Overview</h5>
        <canvas id="userChart" height="100"></canvas>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const ctx = document.getElementById('userChart').getContext('2d');
  const userChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Students', 'Faculty', 'Registrars'],
      datasets: [{
        label: 'User Distribution',
        data: [<%= totalStudents %>, <%= totalFaculty %>, <%= totalRegistrars %>],
        backgroundColor: ['#0d6efd', '#198754', '#ffc107']
      }]
    }
  });
</script>