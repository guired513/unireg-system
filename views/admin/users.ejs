<h2 class="mb-4">User Management Panel</h2>
<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Current Role</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.status %></td>
        <td>
          <form action="/admin/update/<%= user._id %>" method="POST" class="d-inline">
            <select name="role" class="form-select form-select-sm d-inline w-auto">
              <option value="student" <%= user.role === 'student' ? 'selected' : '' %>>student</option>
              <option value="faculty" <%= user.role === 'faculty' ? 'selected' : '' %>>faculty</option>
              <option value="registrar" <%= user.role === 'registrar' ? 'selected' : '' %>>registrar</option>
              <option value="superadmin" <%= user.role === 'superadmin' ? 'selected' : '' %>>superadmin</option>
            </select>
            <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
          </form>
          <form action="/admin/toggle-status/<%= user._id %>" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-danger">
              <%= user.status === 'Active' ? 'Deactivate' : 'Activate' %>
            </button>
          </form>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>